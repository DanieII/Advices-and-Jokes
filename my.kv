<Main>
    card: card

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Advices and Jokes"
            right_action_items: [["theme-light-dark", lambda x: app.change_theme()]]

        MDFloatingActionButtonSpeedDial:
            icon: "view-headline"
            data: root.data
            root_button_anim: True

    MDCard:
        id: card
        orientation: "vertical"
        size_hint: .5, .8
        pos_hint: {"center_x": 0.5, "center_y": .45}
        elevation: 4
        shadow_radius: 6
        shadow_offset: 0, 2

        MDRelativeLayout:
            MDLabel:
                selected: False
                pos_hint: {"center_x": .5, "center_y": .9 if self.selected else 0.5}
                halign: "center"
                text: root.text
                bold: True
                font_style: "H4"
