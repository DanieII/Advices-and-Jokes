<Main>
    card: card

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Advices and Jokes"
            right_action_items: [["theme-light-dark", lambda x: app.change_theme()]]
            orientation: "vertical"

        MDFloatingActionButtonSpeedDial:
            hint_animation: True
            icon: "view-headline"
            data: app.data
            root_button_anim: True

    MDCard:
        id: card
        orientation: "vertical"
        size_hint: .5, .7
        pos_hint: {"center_y": 0.5, "center_x": .5}
        elevation: 4
        shadow_radius: 6
        shadow_offset: 0, 2

        MDLabel:
            text: app.text
            halign: "center"
            bold: True
            font_style: "H4"
